<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/etNama" tools:text="Nama"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Name"
                android:ems="10"
                android:id="@+id/editText2"/>

        <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:orientation="horizontal" tools:text="Kemampuan Bahasa"/>
        <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/checkBox4" tools:text="Indonesia"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/checkBox5" tools:text="Jepang"/>
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/checkBox7" tools:text="Inggris"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                <CheckBox
                        android:text="CheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/checkBox6" tools:text="Arab"/>
            </TableRow>
            <TableRow android:layout_width="match_parent" android:layout_height="match_parent"/>
        </TableLayout>
        <CheckBox
                android:text="CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox3" tools:text="Mandarin"/>
        <CheckBox
                android:text="CheckBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/checkBox" tools:text="Jawa"/>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView16" android:layout_weight="1"
                    tools:text="Negara Asal"/>
            <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/spinner4"
                    android:layout_weight="1"
                    android:entries="Array/negaraAsal"/>
        </RadioGroup>
        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView17"
                    android:layout_weight="1" tools:text="Jenis Kelamin"/>
            <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/roPria"
                    android:layout_weight="1"
                    android:orientation="vertical" tools:text="Pria"/>
            <RadioButton
                    android:text="RadioButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/roWanita"
                    android:layout_weight="1"
                    android:orientation="vertical" tools:text="Wanita"/>
            <Button
                    android:text="Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnTampilkan" tools:text="Tampilkan"/>
            <Button
                    android:text="Button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/btnKosongkan" tools:text="Kosongkan"/>
        </RadioGroup>
    </LinearLayout>
</ScrollView>